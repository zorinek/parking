<html>
	<head>
		<meta charset="utf-8">
		<title>{_ contactform.sender_email.title_1} {$server} {_ contactform.sender_email.title_2}!</title>
		<style>

		</style>
	</head>
	<body>
        <p>{_ contactform.sender_email.hello},</p>
        <p>{_ contactform.sender_email.message_1} {$server} {_ contactform.sender_email.message_2}!</p>
        {if $name}
            <p>{_ contactform.sender_email.name}: {$name}</p>
        {/if}
        {if $phone}
            <p>{_ contactform.sender_email.phone}: {$phone}</p>
        {/if}
        {if $category}
            <p>{_ contactform.sender_email.category}: {$category}</p>
        {/if}
        <p>{_ contactform.sender_email.message}:</p>
        <p>{$message}<p>
        <p>{_ contactform.sender_email.thanks}</p>
	</body>
</html>
